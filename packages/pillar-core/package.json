{
  "name": "@pillar/core",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "keywords": [
    "accessibility",
    "typescript",
    "a11y",
    "accessibility",
    "pillar-core",
    "ui-components",
