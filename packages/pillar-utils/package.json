{
  "name": "@pillar/utils",
  "version": "0.1.0",
  "sideEffects": false,
  "description": "A collection of utility functions and tools to assist with common tasks and improve the efficiency of web development. These utilities are carefully crafted to enhance productivity and streamline the development process.",
  "keywords": [
    "utils",
    "utility functions",
    "web development",
    "productivity",
    "efficiency",
    "code optimization",
    "development tools",
    "programming"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HamzaAmar/pillar-ui",
    "directory": "packages/pillar-utils"
  },
  "bugs": "https://github.com/HamzaAmar/pillar-ui/issues",
  "author": {
    "name": "Hamza Miloud Amar",
    "email": "hamzamiloudamar@gmail.com"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "npx tsup",
    "build:watch": "npx tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "yarn build:watch",
    "test": "vitest run",
    "type:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@pillar/tsconfig": "*",
    "@pillar/eslint": "*",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.15.0",
    "react": "^18.1.0",
    "tsup": "^6.7.0",
    "typescript": "^4.5.3",
    "vitest": "^0.31.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.registry.github.com/"
  }
}
